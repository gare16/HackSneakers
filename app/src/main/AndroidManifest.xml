<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.apps.hacksneakers" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_apps"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_apps"
        android:supportsRtl="true"
        android:theme="@style/Theme.HackSneakers" >
        <activity
            android:name=".view.EditShoeActivity"
            android:exported="false" />
        <activity
            android:name=".view.EditProfileActivity"
            android:exported="false" />
        <activity
            android:name=".view.AddShoesActivity"
            android:exported="false" />
        <activity
            android:name=".view.ForgotPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".view.ProfileActivity"
            android:exported="false" />
        <activity
            android:name=".view.SignUpActivity"
            android:exported="false" />
        <activity
            android:name=".view.LoginActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.ScanActivity"
            android:exported="false" />
        <activity
            android:name=".view.NewActivity"
            android:exported="false" />
        <activity
            android:name=".view.MainActivity"
            android:exported="false" />
    </application>

</manifest>